- provide(:title, 'Change Password')
.container.pt-5
  .row
    .col-3
    .col-6
      %h2.mb-5 Change your password
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .form-group
          = f.label :password, 'New password'
          - if @minimum_password_length
            %em
              (\#{@minimum_password_length} characters minimum)
          = f.password_field :password, autofocus: true, class: 'form-control', required: 'required'
        .form-group
          = f.label :password_confirmation, 'Confirm new password'
          = f.password_field :password_confirmation, class: 'form-control', required: 'required'
        .form-group
          = f.submit 'Change my password', class: 'btn btn-primary'
      .row.my-5
        .col
          = button_to 'Sign In', new_session_path(resource_name), class: 'btn btn-outline-secondary', method: :get
        .col
          = button_to 'Sign Up', new_registration_path(resource_name), class: 'btn btn-outline-secondary', method: :get
