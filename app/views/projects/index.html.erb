<% provide(:title, 'Project List') %>
<div class="container pt-3">
  <div class="row">
    <div class="col">
      <h2>LT-PBR Projects</h2>
    </div>
    <div class="col text-right">
      <%= link_to 'Map View', projects_map_path, class: "btn btn-success" %>
    </div>
  </div>
    <div class="col text-left">
      Sort By:
      <%= link_to 'Map View', projects_path, class: "btn btn-success" %>
      <button type="button" class="btn btn-secondary">Name</button>
      <button type="button" class="btn btn-secondary">Affiliation</button>
      <button type="button" class="btn btn-secondary">Stream</button>
      <button type="button" class="btn btn-secondary">Watershed</button>
    </div>
<% name_sort = false%>
<% affiliation_sort = false%>
<% stream_name = false%>
<% watershed_sort = false%>


<%= render :partial => 'project', :collection => @projects.sort_by(&:name) if name_sort == false%>
  
</div>