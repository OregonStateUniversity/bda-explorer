<hr>
<div class="row">
  <div class="col-sm-2">
    <%= image_tag project.photos[0].presence || "missing_image.jpg", alt: "Project on #{project.stream_name}", class: 'rounded', width: 100 %>
  </div>
  <div class="col-sm-7">
    <h3><%= link_to project.name, project, class: "text-dark" %></h3>
    <h5><%#= link_to project.affiliation, project, class: "text-secondary" %></h5>
    <div class="affiliation-tagline-list">
      <h5 class="text-secondary">
        <%= raw(project.organizations.order(:name).map{ |organization|
          role = project.affiliations.find_by(project_id: project.id, organization_id: organization.id).role
          raw(link_to(organization.name, organization_path(organization)) +
          (" (" + role + ")" unless role.to_s.empty?)) }.join(', ')) %>
      </h5>
    </div>
  </div>
  <div class="col-sm-3">
    <h5><%= link_to project.watershed, project, class: "text-dark" %></h5>
    <h5><%= link_to project.stream_name, project, class: "text-secondary" %></h5>
  </div>
</div>