.modal.fade{id: modal_attributes[:id], 'aria-hidden': 'true', role: 'dialog', tabindex: '-1'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %h5.modal-title= modal_attributes[:title]
        %button.close{'aria-label': 'Close', 'data-dismiss': 'modal', type: 'button'}
          %span{'aria-hidden': 'true'} Ã—
      .modal-body
        - modal_attributes[:body_lines].each do |line|
          %p= line
      .modal-footer
        %button.btn.btn-secondary{'data-dismiss': 'modal', type: 'button'} Close
