-provide(:title, 'New Project')
.container
  .row
    .col-md-3
    .col-md-6
      %h2 New Project
      %hr/
      = form_for(@project, html: {multipart: true}) do |f|
        = form_errors_for(@project)
        = f.label :affiliation
        = f.text_field :affiliation, autofocus: true, autocomplete: 'off'
        = f.label :stream_name, 'Stream name'
        = f.text_field :stream_name, autocomplete: 'off'
        = f.label :implementation_date
        = f.text_field :implementation_date, autocomplete: 'off'
        = f.label :narrative
        = f.text_area :narrative, autocomplete: 'off'
        = f.label :area, 'Area (meters)'
        = f.text_field :area, autocomplete: 'off'
        = f.label :maintenance, 'Maintenance?'
        = f.check_box :maintenance
        = f.label :primary_contact
        = f.text_field :primary_contact, autocomplete: 'off'
        .actions
          = f.submit 'Create project', class: 'btn confirm-btn'
