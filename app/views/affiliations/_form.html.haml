= form_for [@project, @affiliation] do |f|
  .row
    .col
      .form-group
        = f.label :organization_id, 'Organization'
        = f.select :organization_id, Organization.order(:name).map { |u| [u.name, u.id] }, { prompt: 'Select and Organization...' }, { class: 'form-control select2'}
    .col
      .form-group
        = f.label :role, 'Organization\'s Role in Project'
        = f.text_field :role, placeholder: 'e.g. Founder, Donor, Implementor', class: 'form-control'
    .col.text-right
      = f.submit class: 'btn btn-primary mt-4'
%link{href: "https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css", rel: "stylesheet"}/
%script{src: "https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"}
:javascript
  $(".select2").select2({
      placeholder: "Select an Organization",
      allowClear: true
  });
