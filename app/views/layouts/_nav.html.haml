%nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
  = link_to root_path, :class => 'logo', title: 'BDA Explorer home' do
    BDA
    %span#logo-highlight explorer
  %button.navbar-toggler{"aria-controls" => "nav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#nav", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #nav.collapse.navbar-collapse.justify-content-end
    %ul.navbar-nav
      - if user_signed_in?
        %li
          = link_to 'New Project', new_project_path, class: 'btn btn-outline-primary my-2 my-sm-0 new-project-btn'
        %li.nav-item.dropdown
          %a#dropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "http://example.com"}
            = current_user.username
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdown"}
            .dropdown-item
              = link_to 'My Projects', user_path(current_user)
            .dropdown-item
              = link_to 'Edit Profile', edit_user_registration_path
            .dropdown-divider
            .dropdown-item
              = link_to 'Sign Out', destroy_user_session_path, method: :delete
      - else
        %li.nav-item.active
          .nav-link= link_to 'Sign In', new_user_session_path
          %span.sr-only (current)
        %li.nav-item.active
          .nav-link= link_to 'Sign Up', new_user_registration_path
